@model Tp4MvcNuevo.ViewModels.ActualizarCadeteViewModel;
@{
    ViewData["Title"] = "Actualizar Cadete";
}
                                                                                                                                                                        
<div class="text-center">
    <h1 class="display-4">Actualizar Cadete</h1>
</div>
<form asp-controller="Cadetes" asp-action="CadeteActualizado" method="POST" class="w-50 mx-auto">
    <h2>Datos Cadete:</h2>
    <span asp-validation-for="@Model.Nombre" class="text-danger"></span>
    <div class="input-group mb-3">
        <span class="input-group-text" id="basic-addon1"><i class="fa-solid fa-file-signature"></i></span>
        <input type="text" asp-for="@Model.Nombre" class="form-control" value="@Model.Nombre">
    </div>
    <span asp-validation-for="@Model.Direccion" class="text-danger"></span>
    <div class="input-group mb-3">
        <span class="input-group-text" id="basic-addon1"><i class="fa-solid fa-location-dot"></i></span>
        <input type="text" asp-for="@Model.Direccion" class="form-control" value="@Model.Direccion">
    </div>
    <span asp-validation-for="@Model.Telefono" class="text-danger"></span>
    <div class="input-group mb-3">
        <span class="input-group-text" id="basic-addon1"><i class="fa-solid fa-phone"></i></span>
        <input type="text" asp-for="@Model.Telefono" class="form-control" value="@Model.Telefono">
    </div>
    <span asp-validation-for="@Model.Cadeteria" class="text-danger"></span>
    <h2 class="mt-3"><i class="fa-solid fa-map-location-dot me-3"></i>Cadeter√≠a</h2>
    <select class="form-select my-3" asp-for="@Model.Cadeteria">
        @foreach (var cadeteria in Model.ListaCadeterias1) {
            if (cadeteria.Id == Model.Cadeteria) {
                <option value="@cadeteria.Id" selected>@cadeteria.Nombre</option>
            } else {
                <option value="@cadeteria.Id">@cadeteria.Nombre</option>
            }
        }
    </select>
    <span asp-validation-for="@Model.TotalACobrar1" class="text-danger"></span>
    <div class="input-group mb-3">
        <span class="input-group-text" id="basic-addon1"><i class="fa-solid fa-money-check-dollar"></i></span>
        <input type="text" asp-for="@Model.TotalACobrar1" class="form-control" value="@Model.TotalACobrar1">
    </div>
    <input type="hidden" name="id" value="@Model.Id">
    <button type="submit" class="btn btn-primary">Enviar</button>
</form>
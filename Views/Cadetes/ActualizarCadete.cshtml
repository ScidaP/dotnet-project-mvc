@model Tp4MvcNuevo.ViewModels.ActualizarCadeteViewModel;
@{
    ViewData["Title"] = "Home Page";
}
                                                                                                                                                                        
<div class="text-center">
    <h1 class="display-4">Actualizar Cadete</h1>
</div>
<form asp-controller="Cadetes" asp-action="CadeteActualizado" method="POST" class="w-50 mx-auto">
    <h2>Datos Cadete:</h2>
    <div class="input-group mb-3">
        <span class="input-group-text" id="basic-addon1"><i class="fa-solid fa-file-signature"></i></span>
        <input type="text" class="form-control" placeholder="Nombre" aria-label="Nombre" aria-describedby="basic-addon1" name="nombre" value="@Model.Cadete1.Nombre">
    </div>
    <div class="input-group mb-3">
        <span class="input-group-text" id="basic-addon1"><i class="fa-solid fa-location-dot"></i></span>
        <input type="text" class="form-control" placeholder="Dirección" aria-label="Dirección" aria-describedby="basic-addon1" name="direccion" value="@Model.Cadete1.Direccion">
    </div>
    <div class="input-group mb-3">
        <span class="input-group-text" id="basic-addon1"><i class="fa-solid fa-phone"></i></span>
        <input type="text" class="form-control" placeholder="Teléfono" aria-label="Teléfono" aria-describedby="basic-addon1" name="telefono" value="@Model.Cadete1.Telefono">
    </div>
    <h2 class="mt-3">Cadetería</h2>
    <select class="form-select my-3" name="Cadeteria">
        @foreach (var cadeteria in Model.ListaCadeterias1) {
            if (cadeteria.Id == Model.Cadete1.Cadeteria) {
                <option value="@cadeteria.Id" selected>@cadeteria.Nombre</option>
            } else {
                <option value="@cadeteria.Id">@cadeteria.Nombre</option>
            }
        }
    </select>
    <div class="input-group mb-3">
        <span class="input-group-text" id="basic-addon1"><i class="fa-solid fa-money-check-dollar"></i></span>
        <input type="text" class="form-control" placeholder="Sueldo" aria-label="Sueldo" aria-describedby="basic-addon1" name="sueldo" value="@Model.Cadete1.TotalACobrar1">
    </div>
    <input type="hidden" name="id" value="@Model.Cadete1.Id">
    <button type="submit" class="btn btn-primary">Enviar</button>
</form>
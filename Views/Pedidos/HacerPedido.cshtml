@model Tp4MvcNuevo.ViewModels.HacerPedidoViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Hacer Pedidos</h1>
</div>
<form asp-controller="Pedidos" asp-action="PedidoAgregado" method="POST" class="w-50">
    <h2>Datos Pedido</h2>
    <div class="input-group mb-3">
        <span class="input-group-text" id="basic-addon1"><i class="fa-solid fa-file-signature"></i></span>
        <input type="text" class="form-control" placeholder="obs" aria-label="obs" aria-describedby="basic-addon1" name="obs">
    </div>
    <div class="input-group mb-3">
        <span class="input-group-text" id="basic-addon1"><i class="fa-regular fa-clipboard"></i></span>
        <input type="text" class="form-control" placeholder="estado" aria-describedby="basic-addon1" name="estado">
    </div>
    <h2 class="mt-3">Nombre Cliente</h2>
    <select class="form-select mt-1" name="idCliente1">
        @foreach (var cliente in Model.ListaClientes1) {
            <option value="@cliente.Id">@cliente.Nombre</option>
        }
    </select>
    <h2 class="mt-3">Nombre Cadete</h2>
    <select class="form-select mt-1" name="idCadete1">
        @foreach (var cadete in Model.ListaCadetes1) {
            <option value="@cadete.Id">@cadete.Nombre</option>
        }
    </select>
    <button type="submit" class="btn btn-primary mt-3">Enviar</button>
</form>